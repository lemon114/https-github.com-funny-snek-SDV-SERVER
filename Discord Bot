const Discord = require('discord.js');
const bot = new Discord.Client();
const TOKEN = NDk1MTgyODY1NzYwMzg3MTA0.Do-XzA.6YU9LvYktGIBJbXe9nMwuvwa2Hw


bot.on('message', function(message)
{

    if(message.content == '!code')
    {
        var fs = require('fs');
        fs.readFile('C://Program Files (x86)/Steam/steamapps/common/Stardew Valley/Mods/Always On Server/InviteCode.txt', 'utf8', function(err, data) {  
            if (err) throw err;
            console.log(data);
            message.reply(data);
        });
           

    }

}
);


bot.login(TOKEN);
